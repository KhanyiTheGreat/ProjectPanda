<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectPanda.Pages.Settings">
    <ContentPage.Content>
        <StackLayout>
            <Image>
                HorizontalOptions="Center" HeightRequest="100" WidthRequest="200" Aspect="AspectFit" x:Name="userIcon"
            </Image>

            <Frame OutlineColor="Black" >
                <Entry Text="User Name" BackgroundColor="White" HorizontalOptions="Center"/>
            </Frame>

            <!--Some margining needs to be aaplied in order to make it look more like the mock ups-->

            <Frame>
                <Entry Text="Blood type" BackgroundColor="White" HorizontalOptions="Center"/>
            </Frame>

            <Frame>
                <Entry Text="Medical aid" BackgroundColor="White" HorizontalOptions="Center"/>
            </Frame>

            <Label Text="Distance" FontSize="Large" HorizontalOptions="Center" TextColor="Black"/>

            <Label Text=" Kilometers" HorizontalOptions="Start"/>

            <Switch/>

            <Button Text="Save" HorizontalOptions="Center" BorderColor="Black"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>