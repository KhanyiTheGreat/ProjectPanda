<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectPanda.Views.Delivery">
    <ContentPage.Content>

        <ScrollView>

            <StackLayout >

                <StackLayout Margin="15,20,15,10">
                    <Frame OutlineColor="Black" BackgroundColor="#ccdbc3" HeightRequest="23" CornerRadius="0">

                        <Label Text="Prescription" HorizontalOptions="Center" FontSize="20" TextColor="Black"/>

                    </Frame>
                </StackLayout>


                <StackLayout Margin="15,15,15,0">
                    <Frame BackgroundColor="White"  WidthRequest="20" HeightRequest="200" OutlineColor="Black"  CornerRadius="8">

                    </Frame>
                </StackLayout>



                <StackLayout Margin="0,20,0,10" >
                    <Button Text="Schedule Delivery" HorizontalOptions="Center" BorderWidth="2" BackgroundColor="DarkGreen" BorderColor="Black" />

                    <!-- the button to get the medicine, which will have a prompt to verify the scheduled delivery-->
                </StackLayout>


                <StackLayout Margin="15,20,15,20">
                    <Frame OutlineColor="Black" BackgroundColor="#ccdbc3" CornerRadius="0" HeightRequest="23">
                        <Label Text="Delivery history" HorizontalOptions="Center" TextColor="Black" FontSize="18"/>
                        <!--this will be the heading for delivery history-->
                    </Frame>
                </StackLayout>

                <StackLayout Margin="15,10,15,9">

                    <!--the list of information of the date, time, place, medicines and deliverer-->
                    <Frame OutlineColor="Black" BackgroundColor="White" CornerRadius="8">
                        <Label  FontSize="18" TextColor="Black">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Date:"/>
                                    <Span Text=""/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                    </Frame>
                </StackLayout>


                <StackLayout Margin="15,10,15,9">
                    <Frame OutlineColor="Black" BackgroundColor="White" CornerRadius="8">
                        <Label  TextColor="Black" FontSize="18">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Time:"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </Frame>
                </StackLayout>

                <StackLayout Margin="15,10,15,9">
                    <Frame OutlineColor="Black" BackgroundColor="White" CornerRadius="8">
                        <Label  FontSize="18" TextColor="Black">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Place:" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </Frame>
                </StackLayout>

                <StackLayout Margin="15,10,15,9">
                    <Frame OutlineColor="Black" CornerRadius="8">

                        <Label  BackgroundColor="White" FontSize="18" TextColor="Black">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Medicine(s):"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>


                    </Frame>
                </StackLayout>



            </StackLayout>
        </ScrollView>

    </ContentPage.Content>
</ContentPage>